<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.WatchViewStub
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/watch_view_stub"
    app:rectLayout="@layout/rect_activity_main" app:roundLayout="@layout/round_activity_main"
    tools:context=".MainActivity"
    tools:deviceIds="wear">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_box="all"
        android:padding="5dp"
        android:background="#ffc3bcff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HELLO!"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:id="@+id/result"
            android:layout_below="@+id/button"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_alignParentStart="true"
            android:nestedScrollingEnabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oops"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:onClick="oops" />

    </RelativeLayout>


</android.support.wearable.view.WatchViewStub>
